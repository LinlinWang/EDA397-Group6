<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
            <gradient
                android:startColor="#bdbdbd"
                android:endColor="#707070"
                android:angle="270" />
            <stroke android:color="#FF000000"
                android:width="0.006dp" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <corners
                android:radius="50dp" />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
            <solid
                android:color="#707070" />
            <stroke android:color="#FF000000"
                android:width="0.006dp"/>
        </shape>
    </item>
</selector>